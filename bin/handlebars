var path = require('path'),
    fs = require('fs'),
    lib = path.join(path.dirname(fs.realpathSync(__filename)), '../src');
if (fs.existsSync(lib + '/handlebars.js')) {
    require(lib + '/handlebars.js');
} else {
    console.log(lib + '/handlebars.js not found!');
    process.exit(1);
}
